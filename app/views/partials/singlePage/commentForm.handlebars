<!--comment form start-->
<div class="comment-respond" id="form">
    <h3 class="comment-reply-title mb-lg-5 mb-4">
        پیام بگذارید
    </h3>
    {{#each errors}}
        <div class="alert alert-danger" role="alert">
            <i class="zmdi zmdi-info"></i>
            <span>{{this}}</span>
        </div>
    {{/each}}
    {{#if success}}
        <div class="alert alert-success" role="alert">
            <i class="zmdi zmdi-info"></i>
            <span>{{success}}</span>
        </div>
    {{/if}}

    <div class="alert alert-info d-none" id="say-comment"></div>
    <form role="form" action="" method="post" class="comment-form">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="نام*"
                        name="user_name"
                        value="{{formData.user_name}}"
                    />
                    <input type="hidden" name="post_id" value="{{post.id}}" />
                    <input type="hidden" name="comment_id" id="comment-id"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input
                        type="email"
                        class="form-control"
                        placeholder="ایمیل*"
                        name="user_email"
                        value="{{formData.user_email}}"
                    />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input
                        type="text"
                        class="form-control"
                        placeholder="وب سایت"
                        name="user_url"
                    />
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="controls">
                <textarea
                    id="message"
                    rows="5"
                    placeholder="نظر*"
                    name="comment"
                    class="form-control"
                ></textarea>
            </div>
        </div>
        <p class="text-muted">آدرس ایمیل شما منتشر نخواهد شد. فیلدهای مورد نیاز
            علامت گذاری شده اند *</p>
        <div class="text-center mt-md-5">
            <button type="submit" class="btn btn-theme">ارسال</button>
        </div>
    </form>
</div>
<!--comment form end-->