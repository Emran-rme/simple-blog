<section class="section-gap pb-0">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <section class="section-gap px-lg-5">
                    <div
                        class="hero-img bg-overlay rounded overflow-hidden"
                        data-overlay="2"
                        style="background-image: url({{post.image}});"
                    ></div>
                    <div class="container">
                        <div class="row align-items-center text-white">
                            <div class="col-md-8">
                                <h3 class="">{{post.title}}</h3>
                                <div class="meta font-lora my-4 text-white">
                                    <a href="#">{{post.authorFullName}}</a>
                                    <span class="meta-separator"></span>
                                    <a href="#">{{post.jalaliDate}}</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>