<div class="row mbn-20">

    <!--Form Field-->
    <div class="col-lg-12 col-12 mb-20">
        <div class="box">
            <div class="box-head">
                <h6 class="mb-15">ویرایش {{post.title}}</h6>
            </div>
            <div class="box-body">
                {{#each errors}}
                    <div class="alert alert-outline-danger" role="alert">
                        <i class="zmdi zmdi-info"></i>
                        <span>{{this}}</span>
                    </div>
                {{/each}}
                <form action="/admin/posts/update/{{post.id}}" method="post">
                    <div class="row mbn-15">
                        <div class="col-8 mb-15">
                            <input
                                name="title"
                                type="text"
                                class="form-control"
                                value="{{post.title}}"
                                placeholder="عنوان مطلب"
                            />
                        </div>
                        <div class="col-4 mb-15">
                            <select class="form-control" name="author_id">
                                {{!-- <option disabled selected>انتخاب</option> --}}
                                {{#each users}}
                                    <option
                                        value="{{this.id}}"
                                        {{#isPostAuthor this.id}} 
                                        selected 
                                        {{/isPostAuthor}}
                                    >{{this.full_name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="col-8 mb-15">
                            <textarea
                                name="content"
                                class="form-control summernote"
                                placeholder="محتوای مطلب"
                            >{{post.content}}</textarea>
                        </div>
                        <div class="col-lg-4 col-4 mb-20">

                            <h6 class="mb-15">وضعیت مطلب</h6>

                            <label><input
                                    type="radio"
                                    name="status"
                                    value="0"
                                    {{#isStatus 0}}
                                    checked
                                    {{/isStatus}}
                                />پیشنویس</label>
                            <label><input
                                    type="radio"
                                    name="status"
                                    value="1"
                                    {{#isStatus 1}}
                                    checked
                                    {{/isStatus}}
                                />در حال بازبینی</label>
                            <label><input
                                    type="radio"
                                    name="status"
                                    value="2"
                                    {{#isStatus 2}}
                                    checked
                                    {{/isStatus}}
                                />منتشر شده</label>

                        </div>
                        <div class="col-12 mb-15 d-flex justify-content-end">
                            <button
                                type="submit"
                                class="button button-primary button-clipboard mb-0 mt-15"
                            >ویرایش</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
    <!--Form Field-->

</div>