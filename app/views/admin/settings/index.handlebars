<div class="row mbn-20">

    <!--Form Field-->
    <div class="col-lg-12 col-12 mb-20">
        <div class="box">
            <div class="box-head">
                <h6 class="mb-15">تنظیمات وبلاگ</h6>
            </div>
            <div class="box-body">
                {{#if success}}
                    <div class="alert alert-success" role="alert">
                        <i class="zmdi zmdi-info"></i>
                        <span>{{success}}</span>
                    </div>
                {{/if}}
                {{#each errors}}
                    <div class="alert alert-outline-danger" role="alert">
                        <i class="zmdi zmdi-info"></i>
                        <span>{{this}}</span>
                    </div>
                {{/each}}
                <form action="/admin/settings" method="post">
                    <div class="row mbn-15">
                        <div class="col-4">
                            <div class="col-12 mb-15">
                                <h6
                                    class="mb-15 border-bottom p-2 border-secondary text-secondary"
                                >عمومی</h6>
                                <input
                                    name="site_title"
                                    type="text"
                                    value="{{settingData.site_title}}"
                                    class="form-control"
                                    placeholder="عنوان سایت"
                                />
                            </div>

                            <div class="col-12 mb-15">
                                <textarea
                                    name="site_description"
                                    class="form-control summernote"
                                    placeholder="محتوای سایت"
                                >{{settingData.site_description}}</textarea>
                            </div>
                        </div>
                        <div class="col-4">

                            <div class="col-12 mb-15">
                                <h6
                                    class="mb-15 border-bottom p-2 border-secondary text-secondary"
                                >محتوا</h6>
                                <input
                                    name="site_per_page"
                                    type="number"
                                    value="{{settingData.site_per_page}}"
                                    class="form-control"
                                    placeholder="تعداد پست صفحه اصلی"
                                />
                            </div>

                        </div>
                        <div class="col-4">

                            <div class="col-12 mb-15">
                                <h6
                                    class="mb-15 border-bottom p-2 border-secondary text-secondary"
                                >عضویت</h6>
                                <div class="adomx-checkbox-radio-group">
                                    <label class="adomx-switch">
                                        <input
                                            name="is_register"
                                            type="checkbox"
                                            {{#isRegisterSwitcher 1}} 
                                            checked
                                            {{/isRegisterSwitcher}}
                                        />
                                        <i class="lever"></i>
                                        <span class="text">هرکسی می تواند ثبت
                                            نام کند</span></label>
                                </div>
                            </div>
                            <div class="col-12 mb-15">
                                <div class="adomx-checkbox-radio-group">
                                    <label class="adomx-switch">
                                        <input
                                            name="is_comment"
                                            type="checkbox"
                                            
                                            {{#isCommentSwitcher 1}} 
                                            checked
                                            {{/isCommentSwitcher}}
                                        />
                                        <i class="lever"></i>
                                        <span class="text">کاربران می توانند
                                            دیدگاه ثبت کنند</span></label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 mb-15 d-flex justify-content-end">
                            <button
                                type="submit"
                                class="button button-primary button-clipboard mb-0 mt-15"
                            >ثبت</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
    <!--Form Field-->

</div>