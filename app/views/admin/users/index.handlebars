<div class="col-xlg-12 col-md-12 col-12 mb-30">
    <div class="box">
        <div class="box-head d-flex justify-content-between align-items-center">
            <h4 class="title">لیست کاربران</h4>
            {{#if success}}
                <div class="alert alert-success" role="alert">
                    <i class="zmdi zmdi-info"></i>
                    <span>{{success}}</span>
                </div>
            {{/if}}
            <a
                href="/admin/users/create-new-user"
                class="button button-primary button-clipboard mb-0 mt-15"
            >ایجاد کاربر جدید</a>
        </div>
        <div class="box-body">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>نام</th>
                        <th>ایمیل</th>
                        <th>تاریخ ایجاد</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each users}}
                        <tr>
                            <td>{{this.full_name}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.created_at_persian}}</td>
                            <td>
                                <div class="d-flex">
                                    <a href="/admin/users/edit/{{this.id}}">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <form
                                        action="/admin/users/delete"
                                        method="post"
                                    >
                                        <input
                                            type="hidden"
                                            name="delete_id"
                                            value="{{this.id}}"
                                        />
                                        <button
                                            class="bg-transparent border-0"
                                            type="submit"
                                        >

                                            <i class="fa fa-remove"></i>
                                        </button>
                                    </form>
                                </div>

                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>