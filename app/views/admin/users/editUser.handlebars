<div class="row mbn-20">

    <!--Form Field-->
    <div class="col-lg-12 col-12 mb-20">
        <div class="box">
            <div class="box-head">
                <h6 class="mb-15">ویرایش کاربر {{user.full_name}}</h6>
            </div>
            <div class="box-body">

                {{#each errors}}
                    <div class="alert alert-outline-danger" role="alert">
                        <i class="zmdi zmdi-info"></i>
                        <span>{{this}}</span>
                    </div>
                {{/each}}
                <form
                    action="/admin/users/update/{{user.id}}"
                    method="post"
                    class="row"
                >
                    <div class="col-6 mbn-15">
                        <div class="col-12 mb-15">
                            <input
                                name="full_name"
                                type="text"
                                value="{{user.full_name}}"
                                class="form-control"
                                placeholder="نام  نام خانوادگی"
                            />
                        </div>
                         <div class="col-12 mb-15">
                            <textarea
                                name="description"
                                class="form-control"
                                placeholder="در باره من"
                            >{{user.description}}</textarea>
                        </div>
                        <div class="col-12 mb-15">
                            <input
                                name="email"
                                value="{{user.email}}"
                                type="email"
                                class="form-control"
                                placeholder="ایمیل"
                            />
                        </div>
                        <div class="col-12 mb-15">
                            <input
                                name="password"
                                type="password"
                                class="form-control"
                                placeholder="رمزعبور"
                            />
                        </div>
                    </div>
                    <div class="col-6 mbn-15">
                        <div class="col-lg-12 col-12 mb-20">
                            <h6 class="mb-15">نقش کاربری</h6>

                            <label><input
                                    type="radio"
                                    name="role"
                                    value="0"
                                     {{#isRole 0}}
                                    checked
                                    {{/isRole}}
                                />کاربر</label>
                            <label><input
                                    type="radio"
                                    name="role"
                                    value="1"
                                    {{#isRole 1}}
                                    checked
                                    {{/isRole}}
                                />نویسنده</label>
                            <label><input
                                    type="radio"
                                    name="role"
                                    value="2"
                                    {{#isRole 2}}
                                    checked
                                    {{/isRole}}
                                />مدیر</label>

                        </div>
                        <div class="col-12 mb-15 d-flex justify-content-end">
                            <button
                                type="submit"
                                class="button button-primary button-clipboard mb-0 mt-15 mr-auto"
                            >ثبت</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
    <!--Form Field-->

</div>